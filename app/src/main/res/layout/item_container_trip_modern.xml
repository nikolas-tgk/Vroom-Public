<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="17dp"
        app:cardBackgroundColor="@color/darker_primary_color">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewBorder"
                android:layout_width="62dp"
                android:layout_height="62dp"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="@id/imageView"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintTop_toTopOf="@id/imageView"
                app:layout_constraintBottom_toBottomOf="@id/imageView"
                android:scaleType="centerCrop" />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:background="@color/primary_color"
                android:layout_marginStart="15dp"
                app:layout_constraintEnd_toStartOf="@id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/imageView"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintEnd_toEndOf="@id/imageView"
                android:layout_marginTop="2dp"
                android:text="\@username"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/white"/>

            <!--androidx.appcompat.widget.AppCompatRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingBottom="5dp"
                style="@style/Widget.AppCompat.RatingBar.Small"
                app:layout_constraintTop_toBottomOf="@id/usernameTextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintEnd_toEndOf="@id/imageView"
                android:theme="@style/RatingBar"
                android:numStars="5"
                android:rating="2.5"
                android:stepSize="0.5"
                /> -->
            <View
                android:id="@+id/imageViewSupport"
                android:layout_width="1dp"
                android:layout_height="1dp"

                app:layout_constraintBottom_toBottomOf="@id/imageView"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toTopOf="@id/imageView" />
            <TextView
                android:id="@+id/helperText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text=""
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/graylight"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageView" />
            <!--TextView
                android:id="@+id/statusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Invite"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/graylight"
                android:textSize="14sp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/helperText"
                app:layout_constraintStart_toStartOf="@id/imageStart"
                app:layout_constraintEnd_toStartOf="@id/border"/-->

            <ImageView
                android:id="@+id/imageStart"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/baseline_trip_origin_24"
                app:tint="@color/white"
                app:layout_constraintTop_toBottomOf="@id/helperText"
                app:layout_constraintStart_toEndOf="@id/imageView"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/startLocText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Athens"
                android:ellipsize="none"
                android:maxLines="1"
                android:textColor="@color/graylight"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/imageStart"
                app:layout_constraintBottom_toBottomOf="@id/imageStart"
                app:layout_constraintStart_toEndOf="@id/imageStart" />
            <ImageView
                android:id="@+id/imageEnd"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/baseline_subdirectory_arrow_right_24"
                app:tint="@color/white"
                app:layout_constraintTop_toBottomOf="@id/imageStart"
                app:layout_constraintStart_toStartOf="@id/imageStart"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/endLocText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:maxLines="1"
                android:textColor="@color/graylight"
                android:text="Thessaloniki"
                android:textSize="18sp"
                android:textStyle="bold"

                app:layout_constraintTop_toBottomOf="@id/startLocText"
                app:layout_constraintStart_toStartOf="@id/startLocText"/>
            <View
                android:id="@+id/border"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray_text_color"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/dateText"
                android:layout_marginEnd="20dp" />
            <TextView
                android:id="@+id/infoText"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="In Progress"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/star_yellow"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:padding="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/dateText"
                app:layout_constraintStart_toStartOf="@id/dateText"
                app:layout_constraintEnd_toEndOf="@id/dateText"/>
            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/graylight"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20dp"
                android:text="12 Feb"/>
            <TextView
                android:id="@+id/progressText"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text=""
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#6ce86c"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="0dp"
                android:layout_marginBottom="-3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/dateText"
                app:layout_constraintEnd_toEndOf="@id/dateText"/>
            <TextView
                android:id="@+id/extraText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate now"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/star_yellow"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="0dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dateText"
                app:layout_constraintStart_toStartOf="@id/dateText"
                app:layout_constraintEnd_toEndOf="@id/dateText"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>