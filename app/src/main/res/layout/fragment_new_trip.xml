<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/graylight"
    android:orientation="vertical"
    tools:context=".ui.application.trips.NewTripFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gradientLayout"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        android:background="@drawable/profile_gradient">
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:foreground="?attr/selectableItemBackground"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="back_button"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/mainCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Organize your own trip"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <com.google.android.material.card.MaterialCardView

        android:id="@+id/mainCardView"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.75"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="12dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tripStartLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:backgroundTint="@color/white"
            android:popupBackground="@color/white"
            app:boxStrokeColor="@color/white"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeWidth="0dp"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:helperText="Required*"
            app:helperTextTextColor="@color/alert_red"
            app:startIconDrawable="@drawable/baseline_trip_origin_24"
            android:hint="From">
            <AutoCompleteTextView
                android:id="@+id/tripStartAutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:lines="1"
                android:singleLine="true"
                android:popupBackground="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tripEndLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:backgroundTint="@color/white"
            android:popupBackground="@color/white"
            app:boxStrokeColor="@color/white"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/tripStartLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:errorIconDrawable="@drawable/baseline_error_24"
            app:helperText="Required*"
            app:helperTextEnabled="false"
            app:helperTextTextColor="@color/alert_red"
            app:layout_constraintStart_toStartOf="parent"
            app:startIconDrawable="@drawable/baseline_trip_origin_24">

            <AutoCompleteTextView
                android:id="@+id/tripEndAutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:popupBackground="@color/white"
                android:lines="1"
                android:singleLine="true"
                android:hint="Going to" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/tripEndLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:helperText="Required*"
                app:boxStrokeWidth="0dp"
                app:helperTextTextColor="@color/alert_red"
                app:layout_constraintStart_toStartOf="parent"
                app:startIconDrawable="@drawable/baseline_calendar_month_24"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dateInputText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="Date"
                    android:text="Tomorrow"
                    android:focusable="false"
                    android:inputType="none"
                    android:cursorVisible="false"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/timeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/dateLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:helperText="Required*"
                app:boxStrokeWidth="0dp"
                app:helperTextTextColor="@color/alert_red"

                app:layout_constraintStart_toStartOf="parent"
                app:startIconDrawable="@drawable/baseline_access_time_24"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/timeInputText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:focusable="false"
                    android:inputType="none"
                    android:cursorVisible="false"
                    android:hint="Time"
                    android:text="09:00 AM"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ridersLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:backgroundTint="@color/white"
                android:popupBackground="@color/white"
                app:boxStrokeColor="@color/white"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/timeLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:helperText="Required*"
                app:helperTextTextColor="@color/alert_red"
                app:layout_constraintStart_toStartOf="parent"
                app:startIconDrawable="@drawable/baseline_person_24">
                <AutoCompleteTextView
                    android:id="@+id/ridersAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:text="1"
                    android:hint="Riders to take"
                    android:popupBackground="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>
            <RelativeLayout
                android:id="@+id/publishButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/darker_primary_color"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ridersLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:id="@+id/publishText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Publish"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <ProgressBar
                android:id="@+id/publishLoadingBar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                    android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/white"
                android:visibility="invisible"
                />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>